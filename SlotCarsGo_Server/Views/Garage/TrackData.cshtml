@model SlotCarsGo_Server.Models.ViewModels.GarageViewModel
<style>
    table#assets-data-table tr:nth-child(even) {
        background-color: #FFF4D6;
    }
</style>
<table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th bgcolor="#FFD968">Rank</th>
            <th bgcolor="#FFD968">Lap Time</th>
            <th bgcolor="#FFD968">Car</th>
            <th bgcolor="#FFD968">Driver</th>
        </tr>
    </thead>
    <tbody>
        @{ int carRank = 1;
            foreach (var car in @Model.CarsInGarage)
            {
                <tr>
                    <td>@carRank</td>
                    <td>@car.TrackRecord.ToString(@"m\:ss\.fff")</td>
                    <td>@car.Name</td>
                    <td>@car.RecordHolder</td>
                </tr>
                carRank++;
            }
        }
    </tbody>
</table>

                }