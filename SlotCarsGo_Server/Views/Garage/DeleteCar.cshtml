@model SlotCarsGo_Server.Models.ViewModels.DeleteCarViewModel
@using (Html.BeginForm("DeleteCar", "Garage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-xs-12">
            @Html.DropDownListFor(m => m.SelectedCarToDeleteId, Model.CarsInGarageListItems, "-- Select Car --", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-danger btn-lg" value="Delete" onclick="return confirm('Are you sure?')" />
        </div>
    </div>
}

