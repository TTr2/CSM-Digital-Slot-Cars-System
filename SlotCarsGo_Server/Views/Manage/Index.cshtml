@model SlotCarsGo_Server.Models.ViewModels.IndexViewModel
<div class="jumbotron" style="background-color:#FFD968">
    <div class="row">
        <div class="col-xs-12 col-lg-6">
            <img src="~/Content/Images/SoftTrackPostcard_400.png" style="max-width:100%; height:auto;margin-left:auto;margin-right:auto;display:block;" />
        </div>
        <div class="col-xs-12 col-lg-6">
            <h2 style="color:white">My Account</h2>
            <img src="~/Content/Images/Users/@Model.MyAvatar" style="max-width:50%; height:auto;margin-left:auto;margin-right:auto;display:block;" />
            <dl class="dl-horizontal">
                <dt>Username:</dt>
                <dd>@Model.MyUserName</dd>
                <dt>Password:</dt>
                <dd>
                    [
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Change your password", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword")
                    }
                    ]
                </dd>
                @if (!string.IsNullOrEmpty(Model.MyTrackName))
                {
                    <dt>My Track:</dt>
                    <dd>@Model.MyTrackName</dd>
                    <dt>Track Secret:</dt>
                    <dd>@Model.MyTrackSecret</dd>
                }
            </dl>
        </div>
    </div>
</div>

