            <!-- Bottom Half - Car Details -->
            <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="3" BorderThickness="50" >
                <Image Source="{x:Bind MasterMenuItem.Car.ImagePath}" />
            </Border>
            <TextBlock Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="3" Text="{x:Bind MasterMenuItem.Car.Name}" FontSize="{StaticResource XLFontSize}"/>
            <StackPanel Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="3"  VerticalAlignment="Center">
                <TextBlock
                    Text="Track Record" Style="{StaticResource GridItemHeaderTextStyle}"/>
                <TextBlock
                    Text="{x:Bind MasterMenuItem.Car.TrackRecord.ToString('mm:ss:fff')}"
                    Style="{StaticResource LapTimeVerticalTextStyle}"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="3" VerticalAlignment="Center">
                <TextBlock
                    Text="Record Holder" Style="{StaticResource GridItemHeaderTextStyle}"/>
                <TextBlock
                    Text="{x:Bind MasterMenuItem.Car.RecordHolder.Nickname }"
                    Style="{StaticResource LapTimeVerticalTextStyle}"/>
            </StackPanel>                
        </Grid>
    </ScrollViewer>
</UserControl>
